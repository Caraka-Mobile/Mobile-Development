<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wall"
        android:alpha="0.5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Caraka Mobile"
        android:textColor="@color/primary"
        android:textSize="40sp"
        android:fontFamily="@font/oleoscriptbold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caraka mobile is an application designed to reintroduce Javanese script it also acts as a simple learning platform"
        android:textColor="@color/primary"
        android:textSize="28sp"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/oleoscriptreguler"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

</FrameLayout>